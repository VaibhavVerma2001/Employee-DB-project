<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <link rel="stylesheet" href="css/create.css">

    <title>Edit Employee</title>
</head>

<style>
    body {
        background-color: #f5f5f5;
    }

    .custom {
        width: 45%;
    }

    #edit{
        /* for blur effect */
        background: linear-gradient(rgba(221, 236, 238, 0.3), rgba(216, 235, 238, 0.3)), url('../img/edit-bg.jpg');
        background-repeat: no-repeat;
        background-size: cover;
        padding: 6% 10% 0%;
        background-attachment: fixed;
        min-height: 600px;
        background-position: center;
        height: 100vh;
    }

    @media only screen and (max-width:768px) {
        .custom {
            width: 90%;
        }
    }
</style>

<body>

    <section id="edit">
        <div class="container-fluid text-center custom">
            <h1 class="mt-5 mb-4">Edit Employee</h1>

            <!-- in place of placeholder write values of selected employee -->
            <form action="/edit/<%=employee._id%>" method="POST" class="myForm">
                <div class="mb-3">
                    <input type="text" class="form-control" name="name" value="<%= employee.name%>">
                </div>
                <div class="mb-3">
                    <input type="email" class="form-control" name="username" value="<%= employee.username%>">
                </div>
                <select class="form-select mb-3" name="gender">
                    <option selected disabled>Select Gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <div class="mb-3">
                    <input type="text" class="form-control" name="dob" value="<%= employee.dob%>">
                </div>
                <select class="form-select mb-3" name="status">
                    <option selected disabled>Select Status</option>
                    <option value="Active">Active</option>
                    <option value="Inactive">Inactive</option>
                </select>
                <div class="d-grid">
                    <button class="btn btn-warning" type="submit">Update Employee</button>
                </div>
            </form>
        </div>
    </section>



    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>


</body>

</html>